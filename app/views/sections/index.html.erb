<div class='container'>
<p id="notice"><%= notice %></p>

<h1 class='center'>Manage Shifts</h1>

<h1 class='center'>
  <a href="/assign_all_instructors_to_sections" class="btn btn-lg btn-default"> Assign instructors to all empty shifts</a>  
  <a href="/lessons" class="btn btn-lg btn-default"> Back to Schedule</a>  
</h1>


<table class="instructors-table">
  <thead>
    <tr>
      <th>Id</th>
      <th>Date</th>
      <th>Instructor</th>
      <th>Time Slot</th>
      <th>Sport</th>
      <th>Capacity</th>
      <th>Current Student Count</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sections.each do |section| %>
      <tr>
        <td><%= section.id %></td>
        <td><%= section.date %></td>
        <td><%= section.instructor ? section.instructor.name : "TBD" %></td>
        <td><%= section.slot %></td>
        <td><%= section.sport_name %></td>
        <td><%= section.capacity %></td>
        <td><%= section.student_count %></td>
        <td><%= link_to 'Show', section %></td>
        <td><%= link_to 'Edit', edit_section_path(section) %></td>
        <td><%= link_to 'Destroy', section, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Shift', new_section_path %>
</div>